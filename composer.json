{
  "name": "whatwedo/flysystem-smb",
  "description": "smb icewind adapter for Flysystem.",
  "keywords": ["smb", "icewind", "flysystem", "filesystem", "storage", "file", "files"],
  "type": "library",
  "autoload": {
    "psr-4": {
      "whatwedo\\FlysystemSmb\\": "src/"
    }
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "league/flysystem": "^2.0|^3.0",
    "league/mime-type-detection": "^1.0.0",
    "icewind/smb": "^3.4"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Maurizio Monticelli",
      "email": "maurizio@whatwedo.ch"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "whatwedo/php-coding-standard": "^1.2"
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests/",
    "ecs": "vendor/bin/ecs",
    "ecs-fix": "vendor/bin/ecs --fix"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
